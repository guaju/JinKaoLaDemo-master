<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    
    
    <LinearLayout
        android:layout_width="132dp"
        android:layout_height="44dp"
        android:background="@drawable/henggongjulan"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shouzhi"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/shouzhi"/>
        <ImageView
            android:id="@+id/hongdian"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/hongseyuandian"/>
        <ImageView
            android:id="@+id/hongjiantou"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/hongsejiantou"/>


    </LinearLayout>

</LinearLayout>