<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:text="金考拉微课登陆"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@drawable/gongjulanbeijing"
        android:gravity="center"
        />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="20dp"
       android:layout_marginTop="40dp"
       android:orientation="horizontal"
       android:gravity="center"
       android:layout_marginLeft="200dp"
       android:layout_marginRight="200dp"
       >
       <ImageView
           android:layout_width="20dp"
           android:layout_height="20dp"
           android:src="@drawable/shouji"
           />
       <TextView
           android:layout_height="match_parent"
           android:layout_width="wrap_content"
           android:text="+86"
           android:gravity="center"
           android:textSize="16sp"
           android:textColor="@color/text_color_black"
           />
       <EditText
           android:id="@+id/edt_shoujihao"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="@null"
           android:hint="请输入手机号"
           android:paddingLeft="10dp"
           android:textColor="@color/text_color_black"
           android:textSize="14sp"
           android:inputType="numberSigned"
           />


   </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/com_bg_gray"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="200dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="200dp"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/mima"
            />

        <EditText
            android:id="@+id/edt_mima"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入密码"
            android:paddingLeft="10dp"
            android:textColor="@color/text_color_black"
            android:textSize="14sp"
            android:inputType="textPassword"
            />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/com_bg_gray"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="200dp"
        />

    <Button
        android:id="@+id/btn_login"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/denglu"
        android:layout_gravity="center"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="200dp"
        >
        <TextView
            android:id="@+id/wangjimima"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:text="忘记密码?"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/xinyonghuzhuce"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:text="新用户注册"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_marginLeft="210dp"
        android:layout_marginRight="210dp"
        android:gravity="center"
        >

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/com_bg_gray"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:text="其他登录方式"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/com_bg_gray"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="210dp"
        android:layout_marginRight="210dp"
        android:layout_marginTop="20dp"
        android:gravity="center"

        >
        <ImageView
            android:id="@+id/denglu_qq"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/qq"

            />

        <ImageView
            android:id="@+id/denglu_weixin"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/weixin"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            />
        <ImageView
            android:id="@+id/denglu_weibo"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/weibo"

            />

    </LinearLayout>



</LinearLayout>