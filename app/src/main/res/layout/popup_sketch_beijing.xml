<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioGroup
        android:layout_width="176dp"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:background="@drawable/henggongjulan">
        <RadioButton
            android:id="@+id/beijing_lanse"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:drawableTop="@drawable/lanse"
            android:button="@null" />
        <RadioButton
            android:id="@+id/beijing_danlanse"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:button="@null"
            android:layout_gravity="center"
            android:drawableTop="@drawable/danlanse" />
        <RadioButton
            android:id="@+id/beijing_tuceng"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:button="@null"
            android:layout_gravity="center"
            android:drawableTop="@drawable/tucheng" />
        <RadioButton
            android:id="@+id/beijing_luse"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:button="@null"
            android:layout_gravity="center"
            android:drawableTop="@drawable/luse" />

    </RadioGroup>
    <RadioGroup
        android:layout_width="176dp"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:background="@drawable/henggongjulan">
        <RadioButton
            android:id="@+id/beijing_lanse"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:drawableTop="@drawable/lanse"
            android:button="@null"
            tools:ignore="DuplicateIds"/>
        <RadioButton
            android:id="@+id/beijing_danlanse"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:button="@null"
            android:layout_gravity="center"
            android:drawableTop="@drawable/danlanse"
            tools:ignore="DuplicateIds"/>
        <RadioButton
            android:id="@+id/beijing_tuceng"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:button="@null"
            android:layout_gravity="center"
            android:drawableTop="@drawable/tucheng"
            tools:ignore="DuplicateIds"/>
        <RadioButton
            android:id="@+id/beijing_luse"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:button="@null"
            android:layout_gravity="center"
            android:drawableTop="@drawable/luse"
            tools:ignore="DuplicateIds"/>
        <RadioGroup
            android:layout_width="176dp"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:background="@drawable/henggongjulan">
            <RadioButton
                android:id="@+id/beijing_heise"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:drawableTop="@drawable/heise"
                android:button="@null" />
            <RadioButton
                android:id="@+id/beijing_hongse"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:button="@null"
                android:layout_gravity="center"
                android:drawableTop="@drawable/hongse" />
            <RadioButton
                android:id="@+id/beijing_chengse"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:button="@null"
                android:layout_gravity="center"
                android:drawableTop="@drawable/chenghuangse" />
            <RadioButton
                android:id="@+id/beijing_zise"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:button="@null"
                android:layout_gravity="center"
                android:drawableTop="@drawable/zise" />

        </RadioGroup>


    </RadioGroup>

</LinearLayout>